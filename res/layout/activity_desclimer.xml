<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical"
    tools:context="com.lazooz.lbm.IntroActivity"
    tools:ignore="MergeRootFrame" >

   <com.lazooz.lbm.components.MyScrollView
       android:id="@+id/dsclmr_scrill_view"
       android:layout_width="match_parent"
       android:layout_height="230dp"
       android:fadeScrollbars="false"
       android:scrollbarAlwaysDrawVerticalTrack="false" >

    <TextView
        android:id="@+id/intro_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Hello, I am La&apos;Zooz %v%.\r\n\r\nBy running this app and sharing it with others you are taking part in the establishment of the first Collaborative Transportation Web.\r\n\r\nAnyone contributing to this is being rewarded with ZooZ tokens.\r\nOnce the network is established, Zooz could be traded in exchange for movement"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />
    
      </com.lazooz.lbm.components.MyScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/intro_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_gen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="I accept the terms"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black50"
            android:padding="5dp"
            android:text="Please scroll down the text\n and accept the terms"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>

</FrameLayout>

