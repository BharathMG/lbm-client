<android.support.v4.widget.DrawerLayout  
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lazooz.lbm.SplashActivity"
    tools:ignore="MergeRootFrame">

<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro">

    <ProgressBar
        android:id="@+id/reg_progbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="What&apos;s Next?"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/reg_text_tooltip_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_qmark1"
                android:gravity="center"
                android:text="You can now start recieving Zooz for your contribution."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Zooz are secured tokens that are stored in a digital wallet."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Please enter your mobile phone number to create a wallet. we will send you a confirmation code by a text message."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/reg_reg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gen"
                android:text="Register Now"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/reg_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_gen"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Enter Validation Code"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
    
    <com.haarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/tooltipframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	</com.haarman.supertooltips.ToolTipRelativeLayout>
	


</RelativeLayout>

 <ListView
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        
        android:divider="#b0b0b0"
        android:dividerHeight="1dp"
        android:background="#e8e8e8"/>
</android.support.v4.widget.DrawerLayout>